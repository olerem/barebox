	bool "TP-LINK MR3020"
	select SOC_QCA_AR9331
	select HAVE_PBL_IMAGE
	select HAVE_IMAGE_COMPRESSION
	select HAS_NMON

config BOARD_TPLINK_WDR4300
	bool "TP-LINK WDR4300"
	select SOC_QCA_AR9344
	select HAVE_PBL_IMAGE
	select HAVE_IMAGE_COMPRESSION
	select HAS_NMON

config BOARD_BLACK_SWIFT
	bool "Black Swift"
	select SOC_QCA_AR9331
	select HAVE_PBL_IMAGE
	select HAVE_IMAGE_COMPRESSION
	select HAS_NMON

endchoice

